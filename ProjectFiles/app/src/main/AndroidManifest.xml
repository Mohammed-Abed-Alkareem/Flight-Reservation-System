<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.flightreservationsystem">
    <!-- Add permissions here -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlightReservationSystem">
        <activity
            android:name=".PassengerActivity.SearchFlights"
            android:exported="false" />
        <activity
            android:name=".PassengerActivity.ReserveFlight"
            android:exported="false" />
        <activity
            android:name=".PassengerActivity.PassengerHomeActivity"
            android:exported="false" />
        <activity
            android:name=".AdminHomeActivity.filter.FilterFlightsActivity"
            android:exported="false" />
        <activity
            android:name=".AdminHomeActivity.ViewReservationsActivity"
            android:exported="false" />
        <activity
            android:name=".AdminHomeActivity.Archived.ViewArchiveActivity"
            android:exported="false" />
        <activity
            android:name=".AdminHomeActivity.unava.ViewUnavailableActivity"
            android:exported="false" />
        <activity
            android:name=".AdminHomeActivity.Open.ViewOpenActivity"
            android:exported="false" />
        <activity
            android:name=".AdminHomeActivity.EditFlightActivity"
            android:exported="false" />
        <activity
            android:name=".AdminHomeActivity.ScheduleFlightActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AdminHomeActivity.AdminHomeActivity" />
        <activity android:name=".Sign.LoginActivity" />
        <activity android:name=".Sign.AdminSignUp" />
        <activity android:name=".Sign.PassengerSignUp" />
        <activity android:name=".Sign.RoleSelection" />
    </application>

</manifest>