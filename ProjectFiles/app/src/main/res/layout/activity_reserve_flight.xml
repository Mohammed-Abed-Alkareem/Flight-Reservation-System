<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/passenger_drawer_layout"
    android:background="@drawable/background_1"
    android:backgroundTint="@color/sky_blue"
    android:backgroundTintMode="multiply"
    tools:context=".PassengerActivity.ReserveFlight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/passenger_toolbar"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reserve Flight"
            android:textSize="48sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:textColor="@color/white"
            />
        <EditText
            android:id="@+id/flight_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Flight Number"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="32sp"

            android:layout_marginTop="20dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"

            />

        <EditText
            android:id="@+id/extra_bags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Extra Bags"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="32sp"
            android:inputType="number"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"

            />

        <EditText
            android:id="@+id/food_preferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Food Preferences"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="32sp"
            android:inputType="text"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"

            />

        <EditText
            android:id="@+id/class_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Class Type (Economy/Business)"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="30sp"
            android:inputType="text"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"

            />

        <Button
            android:id="@+id/reserve"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="60dp"
            android:layout_marginTop="140dp"
            android:backgroundTint="#00BCD4"
            android:backgroundTintMode="src_in"
            android:elevation="25dp"
            android:fontFamily="sans-serif-medium"
            android:text="Reserve"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start">

        <include
            layout="@layout/passenger_nav_drawer"
            />

    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>


