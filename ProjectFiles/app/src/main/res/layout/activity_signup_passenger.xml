<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2"
    android:backgroundTint="@color/sky_blue"
    android:backgroundTintMode="multiply"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowRadius="30"
        android:text="User Sign Up"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <!-- Existing EditText fields -->

            <EditText
                android:id="@+id/email_edit_text"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/black"
                android:backgroundTintMode="src_over"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/phone_edit_text"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/black"
                android:backgroundTintMode="src_over"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/first_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/black"
                android:backgroundTintMode="src_over"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/last_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/black"
                android:backgroundTintMode="src_over"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextPassportNumber"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/black"
                android:backgroundTintMode="src_over"
                android:hint="Passport Number"
                android:inputType="text"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/passportIssueDateEditText"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/black"
                android:backgroundTintMode="src_over"
                android:hint="Passport Issue Date"
                android:inputType="date"
                android:shadowColor="#000000"
                android:shadowDx="20"
                android:shadowDy="20"
                android:shadowRadius="30"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp"
                android:focusable="false"
                android:clickable="true"
                android:onClick="openDatePicker"
                android:contentDescription="Select passport issue date" />

            <EditText
                android:id="@+id/editTextPassportIssuePlace"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/black"
                android:backgroundTintMode="src_over"
                android:hint="Passport Issue Place"
                android:inputType="text"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/expiryDateEditText"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/black"
                android:backgroundTintMode="src_over"
                android:hint="Passport Expiration Date"
                android:inputType="date"
                android:shadowColor="#000000"
                android:shadowDx="20"
                android:shadowDy="20"
                android:shadowRadius="30"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp"
                android:focusable="false"
                android:clickable="true"
                android:onClick="openDatePicker"
                android:contentDescription="Select passport expiration date" />

            <Spinner
                android:id="@+id/spinnerFoodPreference"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/black"
                android:backgroundTintMode="src_over"
                android:hint="Food Preference" />


            <EditText
                android:id="@+id/dateOfBirthEditText"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/black"
                android:backgroundTintMode="src_over"
                android:hint="Date of Birth"
                android:inputType="date"
                android:shadowColor="#000000"
                android:shadowDx="20"
                android:shadowDy="20"
                android:shadowRadius="30"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp"
                android:focusable="false"
                android:clickable="true"
                android:onClick="openDatePicker"
                android:contentDescription="Select date of birth" />

            <EditText
                android:id="@+id/editTextNationality"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/black"
                android:backgroundTintMode="src_over"
                android:hint="Nationality"
                android:inputType="text"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/password_edit_text"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/black"
                android:backgroundTintMode="src_over"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/confirm_password_edit_text"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/black"
                android:backgroundTintMode="src_over"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/register_button"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#00BCD4"
        android:backgroundTintMode="src_in"
        android:elevation="25dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowRadius="50"
        android:text="Register"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/signUpPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Already have an account?"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/signup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/semi_transparent_gray"
        android:backgroundTintMode="src_in"
        android:elevation="25dp"
        android:fontFamily="sans-serif-medium"
        android:shadowColor="#000000"
        android:shadowRadius="50"
        android:text="login"
        android:textColor="@color/sky_blue"
        android:textSize="20sp" />

</LinearLayout>
