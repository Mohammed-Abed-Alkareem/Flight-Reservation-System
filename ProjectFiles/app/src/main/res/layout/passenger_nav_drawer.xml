<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:orientation="vertical"
        android:gravity="bottom"
        android:padding="16dp"
        android:background="@color/sky_blue">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passenger"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:id="@+id/passenger_name"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="example@gmail.com"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"
            android:id="@+id/passenger_email"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passenger_home"
        android:orientation="horizontal"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Home"
            android:gravity="center"
            android:textAlignment="textStart"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:drawableLeft="@drawable/home"
            android:drawablePadding="8dp"
            android:layout_marginStart="8dp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_flight"
        android:orientation="horizontal"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Search Flights"
            android:gravity="center"
            android:textAlignment="textStart"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_menu_schedule"
            android:drawablePadding="8dp"
            android:layout_marginStart="8dp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/make_reservation"
        android:orientation="horizontal"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Make Flight Reservations"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_menu_edit"
            android:drawablePadding="8dp"
            android:layout_marginStart="8dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_current_reservations"
        android:orientation="horizontal"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="View Current Reservations"
            android:gravity="center"
            android:textAlignment="textStart"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_menu_open"
            android:drawablePadding="8dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_previous_reservations"
        android:orientation="horizontal"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="View Previous Reservations"
            android:gravity="center"
            android:textAlignment="textStart"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_menu_unavailable"
            android:drawablePadding="8dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="12dp"
        android:background="@color/sky_blue"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logout"
        android:orientation="horizontal"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_menu_logout"
            android:drawablePadding="8dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>