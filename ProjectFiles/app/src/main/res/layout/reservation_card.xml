<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/flight_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flight ID: 12345"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User ID: 67890"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/flight_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flight Class: Economy"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/extra_bags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extra Bags: 2"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price: $150.00"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/food_preferences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Preferences: Vegetarian"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/reservation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservation Date: 2024-08-16 10:00:00"
            android:textSize="16sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
